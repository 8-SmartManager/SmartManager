<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/body_medium_13"
                    android:gravity="left"
                    android:text="@string/ngay"
                    android:textColor="@color/mau_xam"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txtNewActivityDate"
                    android:layout_width="256dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/textlines_khong"
                    android:fontFamily="@font/body_medium_13"
                    android:text="@string/hint_chon_ngay"
                    android:textColor="@color/mau_dam"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/body_medium_13"
                    android:gravity="left"
                    android:text="@string/tai_khoan"
                    android:textColor="@color/mau_xam"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txtNewActivityAccount"
                    android:layout_width="256dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/textlines_khong"
                    android:fontFamily="@font/body_medium_13"
                    android:text="@string/hint_chon_tai_khoan"
                    android:textColor="@color/mau_dam"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/body_medium_13"
                    android:gravity="left"
                    android:text="@string/the_loai"
                    android:textColor="@color/mau_xam"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txtNewActivityName"
                    android:layout_width="256dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/textlines_khong"
                    android:fontFamily="@font/body_medium_13"
                    android:text="@string/hint_chon_the_loai"
                    android:textColor="@color/mau_dam"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/body_medium_13"
                    android:gravity="left"
                    android:text="@string/so_tien"
                    android:textColor="@color/mau_xam"
                    android:textSize="13sp" />
                <EditText
                    android:id="@+id/txtNewActivityAmount"
                    android:layout_width="256dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="@color/mau_dam"
                    android:fontFamily="@font/body_medium_13"
                    android:hint="@string/hint_nhap_so_tien"
                    android:inputType="number"
                    android:textColor="@color/mau_xam"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="39dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/header3_semibold_14"
            android:text="@string/luu"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"/>
        <LinearLayout
            android:id="@+id/layoutContainerThuChiThemMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>