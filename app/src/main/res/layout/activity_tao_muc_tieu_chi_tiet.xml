<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.muctieutietkiem.packages.TaoMucTieuChiTiet">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chu_dao"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/actioonBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:background="@color/chu_dao"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/white"
            android:theme="@style/Theme.SmartManagerTwo"
            app:title="Tạo mục tiêu" />

    </com.google.android.material.appbar.AppBarLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"/>



        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTienMucTieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền mục tiêu"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/edtTienMucTieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:textSize="13sp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtDatDuoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền đạt được"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_weight="0"
                android:inputType="number"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/edtTienDatDuoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNgayKetThuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày kết thúc"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/edtSelectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtMau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Màu"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtLuuY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu ý"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"/>
        </TableRow>


    </TableLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        app:backgroundTint="@null"
        android:text="Tạo"
        android:background="@drawable/button_tao"
        android:textColor="@color/mau_xam"/>


</LinearLayout>