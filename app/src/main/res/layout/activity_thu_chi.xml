<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutContainer"
    tools:context=".ThuChiChinh"
    android:padding="0dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_thuchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/thu_cap"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/mau_dam"
            app:tabTextColor="@color/chu_dao"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center">

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thu"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/body_medium_13"
                    android:textSize="13sp"
                    android:textColor="@color/mau_dam"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/body_medium_13"
                    android:textSize="13sp"
                    android:textColor="@color/mau_dam"/>

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2000000"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/body_medium_13"
                    android:textSize="13dp"
                    android:textColor="@color/mau_dam"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2050000"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/body_medium_13"
                    android:textSize="13dp"
                    android:textColor="@color/thu_cap"/>

            </TableRow>
        </TableLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_thuchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_muctieu"
            app:layout_constraintVertical_bias="0.0" />
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/btnThemMoiThuChi"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_dau_cong"
        app:tint="@color/white"
        android:backgroundTint="@color/thu_cap">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</androidx.coordinatorlayout.widget.CoordinatorLayout>