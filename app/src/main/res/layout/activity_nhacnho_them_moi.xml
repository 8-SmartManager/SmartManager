<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/chu_dao"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnNhacNhoThemMoiBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/chu_dao"
            android:layout_marginRight="32dp"

            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo nhắc nhở"

            android:textSize="20sp"
            android:fontFamily="@font/header2_bold_20"
            android:textColor="@color/white"
            android:layout_weight="1"/>


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Thể loại"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"

                android:textColor="@color/mau_xam"/>
           <TextView
               android:id="@+id/txtNhacNhoThemTheLoai"
               android:text="Thu"
               android:layout_width="match_parent"
               android:backgroundTint="@color/mau_xam"
               android:layout_height="56dp"
               android:layout_weight="1"
               android:fontFamily="@font/header3_semibold_14"
               android:background="@drawable/textlines_khong"
               android:layout_marginRight="30dp"
               android:textColor="@color/mau_dam"
               />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Tên"

                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"

                android:textColor="@color/mau_xam"/>
            <TextView
                android:id="@+id/txtNhacNhoThemTen"
                android:backgroundTint="@color/mau_xam"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/header3_semibold_14"
                android:layout_height="56dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/textlines_khong"
                android:textColor="@color/mau_dam"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Chu kỳ"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"

                android:textColor="@color/mau_xam"/>
            <TextView
                android:id="@+id/txtNhacNhoThemChuKy"
                android:text="Hàng tuần"
                android:layout_width="match_parent"
                android:background="@drawable/textlines_khong"
                android:fontFamily="@font/header3_semibold_14"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:textColor="@color/mau_dam"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Ngày bắt đầu"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"

                android:textColor="@color/mau_xam"/>
            <TextView
                android:id="@+id/txtNhacNhoThemNgayBatDau"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/textlines_khong"
                android:fontFamily="@font/header3_semibold_14"
                android:layout_marginRight="30dp"
                android:textColor="@color/mau_dam"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Giờ nhắc"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"

                android:textColor="@color/mau_xam"/>
            <TextView
                android:id="@+id/txtNhacNhoThemGioNhac"
                android:layout_width="match_parent"
                android:background="@drawable/textlines_khong"
                android:fontFamily="@font/header3_semibold_14"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/mau_dam"
                />

        </TableRow>
    </TableLayout>
<Button
    android:id="@+id/btnNhacNhoThemMoiTao"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="39dp"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:background="@drawable/bg_button"

    android:text="Tạo nhắc nhở"
    android:fontFamily="@font/header3_semibold_14"
    android:textAllCaps="false"
    android:textColor="@color/chu_dao"

   />
    <Space
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/layoutContainerThemNhacNho"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>