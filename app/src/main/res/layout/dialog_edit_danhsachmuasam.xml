<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa item"
        android:fontFamily="@font/header2_bold_20"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:textColor="@color/chu_dao"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.MyEditTextTheme"
            android:hint="Tên Item"
            android:fontFamily="@font/header3_semibold_14"/>
        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá item"
            android:theme="@style/AppTheme.MyEditTextTheme"
            android:inputType="number"
            android:fontFamily="@font/header3_semibold_14"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:backgroundTint="@null"
            android:background="@drawable/button_tao"
            android:textColor="@color/mau_dam"/>
        <Button
            android:id="@+id/btnOK"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="OK"
            android:textAllCaps="false"
            android:backgroundTint="@color/chu_dao"
            android:background="@drawable/button_tao"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>