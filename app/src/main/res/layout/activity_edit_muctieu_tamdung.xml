<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/llTaoMucTieu"
    tools:context="com.example.muctieutietkiem.muctieu.EditMucTieuTamDung">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:measureWithLargestChild="true">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txtTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/header3_semibold_14"
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/edtTenMucTieu"
                    android:theme="@style/AppTheme.MyEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/body_medium_13"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtTienMucTieu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số tiền mục tiêu"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/header3_semibold_14"
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/edtSoTienMucTieu"
                    android:theme="@style/AppTheme.MyEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:inputType="number"
                    android:fontFamily="@font/body_medium_13"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtSoTienDatDuoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số tiền đạt được"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/header3_semibold_14"
                    android:layout_weight="0"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/edtSoTienDatDuoc"
                    android:theme="@style/AppTheme.MyEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:inputType="number"
                    android:fontFamily="@font/body_medium_13"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtNgayKetThuc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày kết thúc"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/header3_semibold_14"
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/edtSelectDate"
                    android:theme="@style/AppTheme.MyEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:focusable="false"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:fontFamily="@font/body_medium_13"  />
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtMau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Màu"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:textSize="14sp"
                    android:fontFamily="@font/header3_semibold_14"
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imvColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_muctieu_color"/>
                    <ImageView
                        android:id="@+id/imvDrop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_vector_dropdown"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biểu tượng"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:textSize="14sp"
                    android:fontFamily="@font/header3_semibold_14"
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imvIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_car"/>
                    <ImageView
                        android:id="@+id/imvDropIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_vector_dropdown"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtLuuY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu ý"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/header3_semibold_14"
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/edtLuuY"
                    android:theme="@style/AppTheme.MyEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/body_medium_13"    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/LayoutContainerMucTieu"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>