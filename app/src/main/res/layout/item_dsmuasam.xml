<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mua_sam"
                    android:fontFamily="@font/body_medium_13"
                    android:textColor="@color/mau_dam"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtCompleted"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="@string/_1"
                        android:gravity="center"
                        android:fontFamily="@font/body_medium_13"/>
                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:gravity="center"
                        android:fontFamily="@font/body_medium_13"/>
                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="@string/_2"
                        android:gravity="center"
                        android:fontFamily="@font/body_medium_13"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="right">
                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_100000"
                    android:fontFamily="@font/header3_semibold_14"
                    android:textColor="@color/thu_cap"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uoc_tinh"
                    android:fontFamily="@font/body_medium_13"
                    android:textColor="@color/mau_xam"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>