<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_dialog"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:fontFamily="@font/header2_bold_20"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/chu_dao"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có chắc chắn muốn xóa"
        android:fontFamily="@font/body_medium_13"
        android:textColor="@color/mau_dam"
        android:paddingVertical="20dp"
        android:paddingHorizontal="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnNo"
            android:layout_width="136dp"
            android:layout_height="42dp"
            android:fontFamily="@font/publicsans_semibold_600"
            android:text="Không"
            android:textAllCaps="false"
            android:background="@drawable/button_tao"
            android:textColor="@color/mau_dam"/>
        <Button
            android:id="@+id/btnYes"
            android:layout_width="136dp"
            android:layout_height="42dp"
            android:fontFamily="@font/publicsans_semibold_600"
            android:text="Có"
            android:layout_marginStart="16dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/chu_dao"
            android:background="@drawable/button_tao"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>