<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nhac_nho_the_loai"
            android:layout_marginLeft="16dp"
            android:layout_weight="2.25"
            android:layout_gravity="center_vertical"
            android:textColor="@color/mau_dam"
            android:fontFamily="@font/body_medium_13"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="@string/nhac_nho_ten"

            android:layout_gravity="center_vertical"
            android:textColor="@color/mau_dam"
            android:fontFamily="@font/body_medium_13"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/nhac_nho_thoi_gian_nhac"
            android:layout_gravity="center_vertical"
            android:textColor="@color/mau_dam"
            android:fontFamily="@font/body_medium_13"/>
    </LinearLayout>
    <ListView
        android:layout_weight="1"
        android:id="@+id/lvNhacNho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@color/thay_trang" />
</LinearLayout>