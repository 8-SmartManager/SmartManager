<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:weightSum="12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtActivityName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Tên hoạt động"
        android:fontFamily="@font/body_medium_13"
        android:textSize="13dp"
        android:textColor="@color/mau_xam"/>
    <TextView
        android:id="@+id/txtActivityAccount"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Số tiền thu"
        android:fontFamily="@font/body_medium_13"
        android:textSize="13dp"
        android:textColor="@color/mau_xam"/>
    <TextView
        android:id="@+id/txtActivityAmount"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Số tiền chi"
        android:fontFamily="@font/body_medium_13"
        android:textSize="13dp"
        android:textColor="@color/thu_cap"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtActivityName2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Tên hoạt động"
            android:fontFamily="@font/body_medium_13"
            android:textSize="13dp"
            android:textColor="@color/mau_xam"/>
        <TextView
            android:id="@+id/txtActivityAccount2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Số tiền thu"
            android:fontFamily="@font/body_medium_13"
            android:textSize="13dp"
            android:textColor="@color/mau_xam"/>
        <TextView
            android:id="@+id/txtActivityAmount2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Số tiền chi"
            android:fontFamily="@font/body_medium_13"
            android:textSize="13dp"
            android:textColor="@color/thu_cap"/>

    </LinearLayout>







</LinearLayout>

