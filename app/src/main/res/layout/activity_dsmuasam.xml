<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/chu_dao"
        android:gravity="center_vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            app:tint="@color/white"
            android:backgroundTint="@color/chu_dao"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách mua sắm"
            android:textSize="20sp"
            android:fontFamily="@font/header2_bold_20"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TableRow >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Tên"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"
                android:textSize="13dp"
                android:textColor="@color/mau_xam"/>

            <EditText
                android:id="@+id/edtNhacNhoChiTietTheLoai"
                android:layout_width="287dp"
                android:layout_height="56dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/mau_xam"
                android:hint="Đặt tên cho danh sách mua sắm"
                android:textColor="@color/mau_dam" />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Tài khoản"

                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"
                android:textSize="13dp"
                android:textColor="@color/mau_xam"/>
            <EditText
                android:id="@+id/edtNhacNhoChiTietTên"
                android:layout_width="256dp"
                android:layout_height="56dp"
                android:hint="Chọn tài khoản"
                android:layout_marginRight="10dp"
                android:textColor="@color/mau_dam"
                android:backgroundTint="@color/mau_xam"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Thể loại"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"
                android:textSize="13sp"
                android:textColor="@color/mau_xam"/>
            <EditText
                android:id="@+id/edtNhacNhoChiTietChuKy"
                android:layout_width="256dp"
                android:layout_height="56dp"
                android:hint="Chọn thể loại"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/mau_xam"
                android:textColor="@color/mau_dam"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Số tiền"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"
                android:textSize="13sp"
                android:textColor="@color/mau_xam"/>
            <EditText
                android:id="@+id/edtNhacNhoChiTietNgayBatDau"
                android:layout_width="256dp"
                android:layout_height="56dp"
                android:hint="Nhập số tiền"
                android:backgroundTint="@color/mau_xam"
                android:layout_marginRight="10dp"
                android:textColor="@color/mau_dam"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_button"

        android:text="Tạo danh sách"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/chu_dao"

        />
</LinearLayout>