<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/chu_dao"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            app:tint="@color/white"
            android:backgroundTint="#00FFFFFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết mục tiêu"
            android:fontFamily="@font/header2_bold_20"
            android:textColor="@color/white"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chinh_sua"
            android:layout_marginLeft="150dp"
            app:tint="@color/white"
            android:backgroundTint="#00FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="35dp"
        >
        <ImageView
            android:id="@+id/imvGoal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_car"
            app:tint="#009688" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="3dp">
            <TextView
                android:id="@+id/txtGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/body_medium_13"
                android:text="Mua xe"/>
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày đạt: 12/11/2022"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_percent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số tiền cập nhật mới nhất"
        android:gravity="center"
        android:fontFamily="@font/header2_bold_20"
        android:textStyle="bold"
        android:textColor="@color/mau_dam"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="750.000đ"
        android:gravity="center"
        android:fontFamily="@font/header2_bold_20"
        android:textSize="34sp"
        android:padding="10dp"
        android:textColor="@color/thu_cap"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/mau_xam" />
    <Button
        android:padding="14dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F3F9FC"
        android:fontFamily="@font/body_medium_13"
        android:text="Thêm số tiền đạt được"
        android:textColor="@color/mau_dam"/>
    <Button
        android:padding="14dp"
        android:layout_marginHorizontal="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F3F9FC"
        android:fontFamily="@font/body_medium_13"
        android:text="Hoàn thành mục tiêu"
        android:textColor="@color/mau_dam"/>





</LinearLayout>