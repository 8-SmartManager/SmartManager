<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/chu_dao"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/btnThongKeChiTietBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            app:tint="@color/white"
            android:backgroundTint="@color/chu_dao"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:textSize="20sp"
            android:fontFamily="@font/header2_bold_20"
            android:textColor="@color/white"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btnChooseTime"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_lich"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="24dp"
            app:tint="@color/white"
            android:backgroundTint="@color/chu_dao"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hàng tháng"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/mau_dam"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/mau_dam"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="333dp"
            android:layout_height="270dp"
            android:src="@drawable/ic_suc_khoe"/>
    </LinearLayout>
    <ListView
        android:layout_weight="1"
        android:id="@+id/lvThongKeChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@color/thay_trang"/>

</LinearLayout>