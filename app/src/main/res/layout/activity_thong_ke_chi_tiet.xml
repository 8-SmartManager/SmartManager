<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtTimePeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thong_ke_hang_thang"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/mau_dam"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/txtTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/mau_dam"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_suc_khoe"/>
    </LinearLayout>
    <ListView
        android:layout_weight="1"
        android:id="@+id/lvThongKeChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@color/thay_trang"/>
</LinearLayout>