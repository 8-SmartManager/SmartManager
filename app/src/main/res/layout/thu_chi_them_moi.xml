<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/chu_dao"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/btnThuChiBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/chu_dao"
            android:layout_marginRight="32dp"
            app:tint="@color/white"
            />
        <TextView
            android:id="@+id/txtMucHoatDong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi"
            android:textSize="20dp"
            android:fontFamily="@font/header2_bold_20"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>


    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:tabIndicatorColor="@color/thu_cap"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="@color/chu_dao">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/btnMucChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/btnMucThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu" />

    </com.google.android.material.tabs.TabLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" >
        <TableRow>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="56dp"

                android:text="Ngày"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"
                android:textSize="13dp"
                android:textColor="@color/mau_xam"/>

            <TextView
                android:id="@+id/txtNewActivityDate"
                android:layout_width="256dp"
                android:layout_height="56dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/textlines_khong"
                android:fontFamily="@font/body_medium_13"
                android:text="18, Th2"
                android:textColor="@color/mau_dam"
                android:textSize="13dp"
                android:textStyle="bold"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Tài khoản"
                android:layout_marginLeft="30dp"

                android:gravity="left"
                android:fontFamily="@font/body_medium_13"
                android:textSize="13dp"
                android:textColor="@color/mau_xam"/>
            <TextView
                android:id="@+id/txtNewActivityAccount"
                android:layout_width="256dp"
                android:layout_height="56dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/mau_xam"
                android:background="@drawable/textlines_chon"
                android:text="Chọn tài khoản"
                android:textSize="13dp"
                android:fontFamily="@font/body_medium_13"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Thể loại"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"
                android:textSize="13dp"
                android:textColor="@color/mau_xam"/>
            <TextView
                android:id="@+id/txtNewActivityName"
                android:layout_width="256dp"
                android:layout_height="56dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/mau_xam"
                android:background="@drawable/textlines_khong"
                android:text="Chọn thể loại"
                android:textSize="13dp"
                android:fontFamily="@font/body_medium_13"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Số tiền"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/body_medium_13"
                android:textSize="13dp"
                android:textColor="@color/mau_xam"/>
            <EditText
                android:id="@+id/txtNewActivityAmount"
                android:layout_width="256dp"
                android:layout_height="56dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/mau_xam"
                android:textSize="13dp"
                android:hint="Nhập số tiền"
                android:backgroundTint="@color/mau_xam"
                android:fontFamily="@font/body_medium_13"/>

        </TableRow>

    </TableLayout>



    <LinearLayout
        android:id="@+id/layoutContainerThuChiThemMoi"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>