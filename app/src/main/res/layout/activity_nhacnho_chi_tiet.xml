<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/body_medium_13"
                    android:gravity="left"
                    android:text="Thể loại"
                    android:textColor="@color/mau_xam"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txtNhacNhoChiTietTheLoai"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/textlines_khong"
                    android:backgroundTint="@color/mau_xam"
                    android:fontFamily="@font/header3_semibold_14"
                    android:text="Chọn thể loại"
                    android:textColor="@color/mau_dam"
                    android:textSize="14sp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/body_medium_13"
                    android:gravity="left"
                    android:text="Tên"
                    android:textColor="@color/mau_xam" />
                <EditText
                    android:id="@+id/edtNhacNhoChiTietTen"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:hint="Nhập tên"
                    android:background="@drawable/textlines_khong"
                    android:backgroundTint="@color/mau_xam"
                    android:fontFamily="@font/header3_semibold_14"
                    android:inputType="text"
                    android:textColor="@color/mau_dam"
                    android:textSize="14sp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/body_medium_13"
                    android:gravity="left"
                    android:text="Chu kỳ"
                    android:textColor="@color/mau_xam" />
                <TextView
                    android:id="@+id/txtNhacNhoChiTietChuKy"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:text="Chọn chu kỳ"
                    android:background="@drawable/textlines_khong"
                    android:backgroundTint="@color/mau_xam"
                    android:fontFamily="@font/header3_semibold_14"
                    android:textColor="@color/mau_dam"
                    android:textSize="14sp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/body_medium_13"
                    android:gravity="left"
                    android:text="Ngày bắt đầu"
                    android:textColor="@color/mau_xam" />
                <TextView
                    android:id="@+id/txtNhacNhoChiTietNgayBatDau"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:text="Chọn ngày bắt đầu"
                    android:background="@drawable/textlines_khong"
                    android:backgroundTint="@color/mau_xam"
                    android:fontFamily="@font/header3_semibold_14"
                    android:textColor="@color/mau_dam"
                    android:textSize="14sp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/body_medium_13"
                    android:gravity="left"
                    android:text="Giờ nhắc"
                    android:textColor="@color/mau_xam" />
                <TextView
                    android:id="@+id/txtNhacNhoChiTietGioNhac"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:text="Chọn giờ nhắc"
                    android:background="@drawable/textlines_khong"
                    android:backgroundTint="@color/mau_xam"
                    android:fontFamily="@font/header3_semibold_14"
                    android:textColor="@color/mau_dam"
                    android:textSize="14sp" />
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="39dp">
            <Button
                android:id="@+id/btnXoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:textColor="@color/chu_dao"
                android:background="@drawable/bg_button"
                android:textSize="14sp"
                android:fontFamily="@font/header3_semibold_14"/>
            <Button
                android:id="@+id/btnLuu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:layout_weight="1"
                android:textColor="@color/chu_dao"
                android:layout_marginRight="32dp"
                android:background="@drawable/bg_button"
                android:textSize="14sp"
                android:fontFamily="@font/header3_semibold_14"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutContainerChiTietNhacNho"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>