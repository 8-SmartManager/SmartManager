<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/chu_dao"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            app:tint="@color/white"
            android:backgroundTint="@color/chu_dao"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:textSize="20sp"
            android:fontFamily="@font/header2_bold_20"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/chu_dao"
            android:src="@drawable/ic_chinh_sua"
            app:tint="@color/white" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_xoa"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="24dp"
            app:tint="@color/white"
            android:backgroundTint="@color/chu_dao"/>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Tài khoản"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/header3_semibold_14"

                android:textColor="@color/mau_xam"/>
            <TextView
                android:id="@+id/txtTaiKhoan"
                android:layout_width="match_parent"
                android:background="@drawable/textlines_khong"
                android:fontFamily="@font/header3_semibold_14"
                android:hint="Chọn tài khoản"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/mau_dam"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Thể loại"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/header3_semibold_14"
                android:textColor="@color/mau_xam"/>
            <TextView
                android:id="@+id/txtTheLoai"
                android:layout_width="match_parent"
                android:background="@drawable/textlines_khong"
                android:fontFamily="@font/header3_semibold_14"
                android:hint="Chọn thể loại"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/mau_dam"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Số tiền"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:fontFamily="@font/header3_semibold_14"
                android:textSize="14sp"
                android:textColor="@color/mau_xam"/>
            <TextView
                android:id="@+id/txtSoTien"
                android:layout_width="match_parent"
                android:background="@drawable/textlines_khong"
                android:fontFamily="@font/header3_semibold_14"
                android:hint="Nhập số tiền"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/mau_dam"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/btnThem"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_button"
        android:text="Thêm"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/chu_dao"

        />
    <Space
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/layoutContainer"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>