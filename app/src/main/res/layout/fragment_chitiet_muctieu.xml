<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/listMucTieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="35dp">
        <ImageView
            android:id="@+id/imvGoal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_car"
            app:tint="#009688" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="3dp">
            <TextView
                android:id="@+id/txtTenMucTieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/body_medium_13"
                android:text="@string/name_goal"/>
            <TextView
                android:id="@+id/txtNgayKetThuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/body_medium_13"
                android:text="@string/time_goal"/>
        </LinearLayout>
    </LinearLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:indeterminateOnly="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:progressDrawable="@drawable/circle"
        android:progress="60"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/percent_goal"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        android:fontFamily="@font/header2_bold_20"
        android:textSize="40sp"
        android:textColor="@color/thu_cap"/>
</androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_saved_goal"
        android:gravity="center"
        android:fontFamily="@font/header2_bold_20"
        android:textStyle="bold"
        android:textColor="@color/mau_dam"/>
    <TextView
        android:id="@+id/txtSoTienDatDuoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/saved_goal"
        android:gravity="center"
        android:fontFamily="@font/header2_bold_20"
        android:textSize="34sp"
        android:padding="10dp"
        android:textColor="@color/thu_cap"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="20dp"
        android:background="@color/mau_xam" />
    <Button
        android:id="@+id/btnThemTien"
        android:padding="14dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:background="@drawable/button_tao"
        android:textAllCaps="false"
        android:fontFamily="@font/body_medium_13"
        android:text="@string/update_saved_goal_button"
        android:textColor="@color/mau_dam"/>
    <Button
        android:id="@+id/btnHoanThanh"
        android:padding="14dp"
        android:layout_marginHorizontal="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/body_medium_13"
        android:text="@string/complete_goal_button"
        android:background="@drawable/button_tao"
        android:textAllCaps="false"
        android:textColor="@color/mau_dam"/>
</LinearLayout>