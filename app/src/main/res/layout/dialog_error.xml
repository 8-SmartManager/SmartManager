<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"


    android:layout_height="wrap_content"
    android:background="@drawable/dialog_confirm_border"
    android:orientation="vertical"
    android:padding="24dp">
<TextView
    android:id="@+id/txtTitle"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:text="Thông báo"
    android:fontFamily="@font/publicsans_bold_700"

    android:gravity="center_vertical"
    android:textColor="#336EB6"
    android:textSize="19sp"/>
    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Bạn có chắc chắn muốn xóa?"
        android:fontFamily="@font/publicsans_regular_400"

        android:gravity="center_vertical"
        android:textColor="#103256"
        android:textSize="14sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnNo"
            android:layout_width="136dp"
            android:layout_height="42dp"

            android:fontFamily="@font/publicsans_semibold_600"
            android:text="Không"
            android:background="@drawable/button_dialog_error_color"
            android:textAllCaps="false"
            android:textColor="@color/button_dialog_error_text_color"/>
        <Button
            android:id="@+id/btnYes"
            android:layout_width="136dp"
            android:layout_height="42dp"

            android:fontFamily="@font/publicsans_semibold_600"
            android:text="Có"
            android:layout_marginStart="16dp"
            android:textAllCaps="false"
            android:background="@drawable/button_dialog_error_color"
            android:textColor="@color/button_dialog_error_text_color"/>
    </LinearLayout>

</LinearLayout>