<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_dialog"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn đã tiết kiệm được thêm bao nhiêu vậy?"
        android:fontFamily="@font/header3_semibold_14"
        android:paddingVertical="10dp"
        android:textColor="@color/chu_dao"/>
    <EditText
        android:id="@+id/edtThemTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số tiền"
        android:fontFamily="@font/body_medium_13"
        android:theme="@style/AppTheme.MyEditTextTheme"
        android:textColor="@color/mau_dam"
        android:inputType="number"
        android:paddingVertical="20dp"
        android:paddingHorizontal="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:backgroundTint="@null"
            android:background="@drawable/button_tao"
            android:textColor="@color/mau_dam"/>
    <Button
        android:id="@+id/btnOk"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="ok"
        android:backgroundTint="@color/chu_dao"
        android:background="@drawable/button_tao"
        android:textColor="@color/white"/>

    </LinearLayout>


</LinearLayout>