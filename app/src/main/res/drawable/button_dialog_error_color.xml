<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#336EB6" />
            <stroke
                android:width="1dp"
                android:color="#d3d6dd" />
            <corners
                android:radius="8dp" />


        </shape>

    </item>
    <item>
        <shape>
            <solid
                android:color="@color/white"/>

            <stroke
                android:width="1dp"
                android:color="#566789" />
            <corners
                android:radius="5dp" />

        </shape>
    </item>
</selector>